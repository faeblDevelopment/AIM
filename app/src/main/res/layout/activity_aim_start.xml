<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.protonmail.fabian.schneider.aim.AIM_start">

    <RadioButton
        android:text="Bluetooth Output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rad_bt"
        android:layout_below="@+id/rad_audio"
        android:layout_alignLeft="@+id/rad_audio"
        android:layout_alignStart="@+id/rad_audio"
        android:visibility="invisible" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbox_adOP"
        android:text="Advanced Options"
        android:checked="false"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:text="Audio Output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rad_audio"
        android:layout_below="@+id/cbox_adOut"
        android:layout_alignRight="@+id/cbox_adOut"
        android:layout_alignEnd="@+id/cbox_adOut"
        android:visibility="invisible" />

    <CheckBox
        android:text="Disp. Output Notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbox_disp_mess"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/rad_bt"
        android:layout_alignLeft="@+id/cbox_adOut"
        android:layout_alignStart="@+id/cbox_adOut"
        android:visibility="invisible" />

    <CheckBox
        android:text="Continue after App-Close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbox_cont"
        android:checked="true"
        android:layout_below="@+id/cbox_disp_mess"
        android:layout_alignRight="@+id/lbl_output"
        android:layout_alignEnd="@+id/lbl_output"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:visibility="invisible" />

    <CheckBox
        android:text="Display Output in App"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbox_disp"
        android:checked="true"
        android:layout_below="@+id/cbox_cont"
        android:layout_alignLeft="@+id/cbox_cont"
        android:layout_alignStart="@+id/cbox_cont"
        android:visibility="invisible" />

    <CheckBox
        android:text="Additional Output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbox_adOut"
        android:checked="true"
        android:layout_below="@+id/cbox_adOP"
        android:layout_alignLeft="@+id/cbox_cont"
        android:layout_alignStart="@+id/cbox_cont"
        android:visibility = "invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analysis of Interplanetary Magnetic-Field Data"
        android:textIsSelectable="false"
        android:textSize="24dp"
        android:textAlignment="center"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start AIM"
        android:id="@+id/start_aim"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="[OUTPUT]"
        android:id="@+id/lbl_output"
        android:layout_below="@+id/start_aim"
        android:layout_alignRight="@+id/start_aim"
        android:layout_alignEnd="@+id/start_aim"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/statusView"
        android:textSize="25dp"
        android:layout_below="@+id/lbl_output"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
